<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pavel.handymerchant.HandTradeActivity">

    <!-- Тикер -->

    <Button
        android:id="@+id/btn_get_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticker"
        app:layout_constraintTop_toBottomOf="@id/tv_ticker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/tv_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/ticker"
        app:layout_constraintBottom_toTopOf="@id/btn_get_ticker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>
